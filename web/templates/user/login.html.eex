<section class="page">
  <h4>Login</h4>
  <form class="inline" action="/users/login" method="post">
    <article>
      <label for="" class="">Email</label>
      <input name="username" placeholder="yourname@email.com" type="email" required="required">
      <label for="" class="">Password</label>
      <input name="password" class="" type="password">
    </article>
    <div class="submit">
      <button class="submit-form" type="submit">Login</button>
    </div>
  </form>
  <aside>
    <a href="<%= root_path(:index) %>" class="">Back</a>
  </aside>
</section>
